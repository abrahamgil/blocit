<%= form_for [topic, post, comment] do |f| %>
  <%= form_group_tag(post.errors[:title]) do %>
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Comment" %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>